{
    "include": [
        "./src/**/*.ts",
        "src/utils"
    ],
    "compilerOptions": {
        "esModuleInterop": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true,
        "outDir": "dist",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@utils/*": [
                "./src/utils/*"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@errors/*": [
                "./src/errors/*"
            ],
            "@errors": [
                "./src/errors"
            ],
            "@nodes": [
                "src/nodes"
            ],
            "@nodes/*": [
                "src/nodes/*"
            ]
        }
    }
}